# ============================================
# CONFIGURACIÓN DE LA BASE DE DATOS
# ============================================
# Motores soportados: mysql, sqlite
DB_TYPE=sqlite
# Para MySQL:
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=tu_contraseña_mysql
DB_NAME=registro_entregas
DB_PORT=3306
# Para SQLite (ubicación relativa a la raíz):
DB_STORAGE=./database/database.sqlite


# ============================================
# CONFIGURACIÓN DEL SERVIDOR
# ============================================
PORT=3000
NODE_ENV=development

# ============================================
# SEGURIDAD - JWT (JSON Web Token)
# ============================================
# IMPORTANTE: Cambia esta clave por una contraseña única y segura
JWT_SECRET=cambiar_por_clave_secreta_super_segura_123456789
JWT_EXPIRES_IN=24h

# ============================================
# EMAIL (Para recuperación de contraseña)
# ============================================
# Descomenta y configura cuando tengas servicio de email
# EMAIL_SERVICE=gmail
# EMAIL_USER=tu_email@gmail.com
# EMAIL_PASSWORD=tu_contraseña_de_aplicacion

# ============================================
# INSTRUCCIONES DE USO
# ============================================
# 1. Copia este archivo y renómbralo a ".env"
# 2. Actualiza las credenciales con tus datos reales
# 3. NO compartas el archivo .env con nadie
# 4. NO subas .env a Git (está protegido por .gitignore)
